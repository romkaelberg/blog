<?php
    try {
        $db = new PDO('mysql:host=localhost;dbname=test', 'root', '1');
        $rows = $db->exec("CREATE TABLE `abc`(
        id INT PRIMARY KEY AUTO_INCREMENT,
        content TEXT NOT NULL DEFAULT '',
        header VARCHAR(250) NOT NULL DEFAULT '',
        name VARCHAR(250) NOT NULL DEFAULT '',
        directory VARCHAR(250) NOT NULL DEFAULT '')");
        $directories = $db->exec("CREATE TABLE `directories`(
        id INT PRIMARY KEY AUTO_INCREMENT,
				name VARCHAR(250) NOT NULL DEFAULT '')");
				$social = $db->exec("CREATE TABLE `social`(
				address VARCHAR(250) NOT NULL DEFAULT '',	
				name VARCHAR(250) NOT NULL DEFAULT '')");
				$users = $db->exec("CREATE TABLE `users`(
       
       	id INT PRIMARY KEY AUTO_INCREMENT,
        login TEXT NOT NULL DEFAULT '',
        pass VARCHAR(250) NOT NULL DEFAULT '',
        directory ARCHAR(250) NOT NULL DEFAULT '')");

    }
    catch(PDOException $e)
    {
    die("Error: ".$e->getMessage());
